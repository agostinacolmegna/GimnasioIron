    @{
        ViewData["Title"] = "Panel del Socio";
        var nombre = Context.Session.GetString("Nombre");
    }

    <section class="container text-center my-5">
        <h2 class="fw-bold display-5 mb-4">¡Bienvenido, @nombre!</h2>

        @if (TempData["CuotaMensaje"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mx-auto" style="max-width: 600px;" role="alert">
                <strong>Atención:</strong> @TempData["CuotaMensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        <div class="d-grid gap-3 col-6 mx-auto mt-4">
            <a class="btn btn-lg btn-danger rounded-pill fw-bold" asp-controller="Pago" asp-action="MisPagos">
                💳 MIS PAGOS
            </a>
            <a class="btn btn-lg btn-success fw-semibold" asp-controller="Reserva" asp-action="MisReservas">
                📅 Mis Reservas
            </a>
            <form asp-controller="Usuario" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger mt-3">Cerrar sesión</button>
            </form>
        </div>
    </section>

